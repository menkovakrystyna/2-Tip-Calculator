print("Welcome to a bill calculator")
total_sum=float(input("please enter your total sum\n"))
percentage_tips=int(input("how many % do you want to leave?\n"))
people=int(input("how many people split the check\n"))
persentage_new=float(percentage_tips)
result=(total_sum*(persentage_new/100)/people)
a=round(result,3)
b="{:.2f}".format(result)
print(f"Each person pays: ${b}")
